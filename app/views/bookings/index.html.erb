<div class="container">
  <div class="container">
    <h1 style="text-align:center" class="mt-5"><%= @bookings.first.user.first_name %>'s Bookings</h1>
  </div>
  <div class="cards mt-5">
    <% @bookings.each do |booking| %>
      <div class="card">
        <ul class="list-group list-group-flush" style="list-style:none">
          <li><%= booking.start_date %> - <%= booking.end_time %></li>
          <li>Usuário: <%= booking.user.first_name %></li>
          <li>Preço total: R$<%= booking.computer.price_day * (booking.end_time - booking.start_date).to_i %>,00</li>
          <li><%= link_to "Computador", computer_path(booking.computer_id) %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>
