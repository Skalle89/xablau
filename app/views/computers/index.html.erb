<h1 style="text-align:center">Browse Computers</h1>

<div class="container col-auto p-5">
  <div class="row justify-content-center">
    <%= form_tag computers_path, class: "col-6", method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a Computer"
      %>
      <%= submit_tag "Search", class: "btn btn-primary mt-2 mb-2" %>
    <% end %>
  </div>
  <div class="cards">
      <% @computers.each do |computer| %>
          <div class="card-product" onclick="javascript:window.location.href='<%= computer_path(computer.id) %>'">
              <%= cl_image_tag computer.photo.key, height: 100,  width: 100, crop: :fill%>
              <div class="card-product-infos">
                <h2><%= computer.processador %> - <%= computer.placa_de_video %></h2>
                <p>RAM:<%= computer.ram %> Pre√ßo/dia: R$<%= computer.price_day %>,00</p>
              </div>
          </div>
      <% end %>
  </div>
</div>
